<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("other.sample"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("other.home"), home_path %></li>
        <li><%= link_to t("other.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("other.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "other.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("other.profile"), current_user %></li>
              <li><%= link_to t("other.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("other.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("other.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
