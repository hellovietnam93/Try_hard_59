<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("mailer.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layout.header.english"), locale: "en" %></li>>
        <li><%= link_to t("layout.header.vietnamese"), locale: "vi" %></li>>
        <li><%= link_to t("layout.header.home"), root_path %></li>
        <li><%= link_to t("layout.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layout.header.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "layout.header.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layout.header.profile"), current_user %></li>
              <li><%= link_to t("layout.header.settings"),
                edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layout.header.logout"),
                  logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layout.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
