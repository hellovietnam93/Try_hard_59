<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("buttons.logo"), root_path, class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("buttons.home"), root_path %></li>
        <li><%= link_to t("buttons.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("buttons.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("buttons.profile"), current_user %></li>
              <li><%= link_to t("buttons.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("buttons.log_out"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("buttons.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
