<% provide :title, "Users" %>

<div class="center jumbotron">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to "Show", user %></td>
              <td>
                <%= link_to "Destroy", user, method: :delete, data: {confirm: "Are you sure?"} %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to "New User", signup_path %>
    </div>
  </div>
</div>
