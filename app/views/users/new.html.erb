<% provide :title, t("where.sign_up") %>
<h1><%= t "where.sign_up" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name, t("labels.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("labels.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("labels.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("labels.password_confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("buttons.create_acc"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
