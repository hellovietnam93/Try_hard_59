<% provide :title, t("where.log_in") %>
<h1><%=t "where.log_in"%> </h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email, t("labels.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("labels.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline " do %>
        <%= f.check_box :remember_me, class: "session-remember-me" %>
        <span><%= t "messages.remember_me" %></span>
      <% end %>

      <%= f.submit t("buttons.log_in"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "messages.new_user" %> <%= link_to t("buttons.sign_up"),
      signup_path %></p>
  </div>
</div>
